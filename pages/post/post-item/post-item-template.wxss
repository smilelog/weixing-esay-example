.post-container {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-top: 1rpx solid #ededed;
  border-bottom: 1rpx solid #ededed;
  margin: 20rpx 0 40rpx 0;
}

.post-author-date {
  margin: 10rpx 0 20rpx 20rpx;
}

.post-author {
  height: 60rpx;
  width: 60rpx;
  vertical-align: middle;
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
}

.post-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin: 0 0 10px 20px;
}

.post-image {
  height: 340rpx;
  width: 100%;
  margin-left: 16rpx;
  margin: auto 0;
  margin-bottom: 15rpx;
}

.post-content {
  line-height: 40rpx;
  font-size: 28rpx;
  margin: 20px 10rpx 20px 10rpx;
  letter-spacing: 2rpx;
}

.post-like {
  font-size: 23rpx;
  flex-direction: row;
  line-height: 16rpx;
  margin-left: 10rpx;
}

.post-like-image {
  height: 36rpx;
  width: 36rpx;
  vertical-align: middle;
  margin-right: 8rpx;
}

.post-like-font {
  vertical-align: middle;
  margin-right: 20rpx;
}
